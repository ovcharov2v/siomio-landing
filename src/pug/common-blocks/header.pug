mixin header()
	// Header
	header.header
		.header__container.container
			.header__logo-box
				h1.header__logo Siomio
				p.header__logo-description Чат-бот знакомств в Telegram
			nav.header__nav
				ul.header__nav-list
					li.header__nav-elem
						a.header__nav-link(href="#")
							|Продукты
							+svg("chevron-down")(class="header__nav-chevron")
						ul.header__nav-sub-list
							li.header__nav-sub-elem
								a.header__nav-link(href="#") Продукт 1
							li.header__nav-sub-elem
								a.header__nav-link(href="#") Продукт 2
							li.header__nav-sub-elem
								a.header__nav-link(href="#") Продукт 3
							li.header__nav-sub-elem
								a.header__nav-link(href="#") Продукт 4
							li.header__nav-sub-elem
								a.header__nav-link(href="#") Продукт 5
					li.header__nav-elem
						a.header__nav-link(href="#") О нас
					li.header__nav-elem
						a.header__nav-link(href="#") Советы по безопасности
				a.button.button--small.header__nav-button(href="#", target="_blank", rel="noreferrer") Открыть
			button.header__menu-button
				+svg("burger")(class="header__menu-button-icon")
